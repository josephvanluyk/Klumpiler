procedure main();
dcl
    i : int;
    total : int;
    num1 : int;
    num2 : int;
    num3 : int;
    num4 : int;
begin
    write ('enter a positive integer: ');
    readln (num1);
    write ('enter a SMALLER positive integer: ');
    readln (num2);
    total := 0;
    for i := num1 downto num2
    do;
        if ((i % 2) = 0)
            then total := total + i;
        else next;
    end;
    writeln(total);

    readln(num3);
    readln(num4);
    total := 0;
    writeln(num3);
    writeln(num4);
    for i := num3 downto num4
    do;
        if ((i % 2) = 0)
            then total := total + i;
        else next;
    end;
    writeln(total);
end
