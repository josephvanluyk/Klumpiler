global
const
type
    myArr : array [8] of int;
dcl
    test : myArr;
{proc
factorial(n : int, var i : int) : int;}


procedure main();
dcl
    n : int;
    x : int;
    asdf : myArr;
begin
    x := 0;
    asdf[0] := 1;
    writeln(asdf[0]);
    asdf[0] := 2;
    writeln(asdf[0]);
    writeln(x);
    x := 0;
    write("Enter the value of n: ");
    readln(n);
    writeln("n! = ", factorial(n, x));
    writeln("x = ", x);
end

procedure factorial(n : int, var i : int) : int;
dcl
begin
    i := i + 1;
    if(n = 0) then
        return 1;
    return n*factorial(n-1, i);
end
.
