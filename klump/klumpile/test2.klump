global
const
type
dcl
	n : int;
	fact : int;
proc
factorial();
procedure main;
dcl
begin
	n := 8;
	fact := 1;
	call factorial();
	writeln(fact);
end

procedure factorial;
dcl
	m : int;
begin

	if(n = 0) then
		fact := 1;
	else
		do;
			m := n;
			n := n - 1;
			call factorial();
			fact := fact*m;
		end;
end
.
