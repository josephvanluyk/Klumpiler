global
const
type
dcl
	n : int;
	fact : int;


procedure main();
dcl
begin
	write("Enter the value of n: ");
	readln(n);
	fact := 1;
	call factorial();
	write("n! = ");
	writeln(fact);
end

procedure factorial();
dcl
	m : int;
begin

	if(n = 0) then
		fact := 1;
	else
		do;
			m := n;
			n := n - 1;
			call factorial();
			fact := fact*m;
		end;
end
.
