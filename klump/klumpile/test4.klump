global
const
	x : 3;
type
dcl
	ret : int;
proc
isPrime(n : int) : bool;


procedure main;
dcl
	n : int;
begin
    write("Enter the value of n: ");
    readln(n);
    while(n <> -1)
        do;
            if(isPrime(n)) then
                writeln(n, " is prime");
            else
                writeln(n, " is not prime");
            write("Enter the value of n: ");
            readln(n);
        end;

end

procedure isPrime;
dcl
    i : int;
begin
    if((n = 1) or (n = 0)) then
        return 1 = 0;
    i := 2;
    while(i < n)
        do;
            if(n % i = 0) then
                return 1 = 0;
            i := i + 1;
        end;
    return 1 = 1;
end.
